extends ./common
block content
    form.mt-5(action="/user/search",method = "GET",class="d-flex")
        input(id="inputText" type="text",name ="name",class="form-control",style="width : 250px")
        button(class="btn btn-primary ml-2") Search
    table.table
        tr  
            th Avatar
            th Name
            th Age
            th(style ="text-align:center") Action
        each user in users
            tr
                td
                    img(src= user.avatar,width="55px")
                td= user.name
                td= user.age
                td(style="text-align:center")
                    a.btn.btn-primary(href="/user/"+user.id) View
                    a.btn.btn-primary.ml-2.btnOpenDialog(href="/user/create/"+user.id) Update  
                    a.btn.btn-primary.ml-2(href="/user/deleteUser/"+user.id) Delete
    div
        dialog#dialog
            form(action="",method="POST",enctype="multipart/form-data",style="width : 500px")
                div(class="form-row d-flex")
                    div(class="col")
                        label(for="name") Name
                        input#name(type="text",name="name",class="form-control",required)
                    div(class="col")
                        label(for="age") Age
                        input#age(type="text",name="age",class="form-control",required)
                label(for="avatar") Avatar 
                input#avatar(type="file",class="form-control-file",name="avatar",required)
                button(class="btn btn-primary ml-2",style="margin-top : 15px") Update
                button(id="btnCloseDialog",class="btn btn-primary ml-3",style="margin-top : 15px") Cancel
block script
    script(src='/js/index.js')
    