html
    head
        link(rel="stylesheet",href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css",integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh",crossorigin="anonymous")
        link(rel="stylesheet",type="text/css",href="/css/login.css")
    body 
        if errs
            div(class="alert alert-danger")= errs
        form(action="/login",method="POST")
            h2 Welcome
            div.input
                label(for="email") Email
                input#email(type="text",name="email",class="form-control",required,value= values ? values.email:'') 
            div.input
                label(for="pwd") Password
                input#pwd(type="password",name="pwd",class="form-control",required,value= values ? values.pwd : '')
                
            button(class="btn btn-primary",style="margin-top : 15px") Login